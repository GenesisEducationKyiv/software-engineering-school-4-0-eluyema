  "scripts": {
    "build": "nest build",
    "migrations:prod": "npx prisma migrate deploy",
    "migrations:dev": "npx prisma migrate dev",
    "migrations:test": "npx dotenv-cli -e .env.integration-test -- npx prisma migrate deploy",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format:check": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "lint:check": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "eslint --ignore-path .gitignore . --ext .js,.ts --fix",
    "test-infrastructure:start": "docker-compose --env-file .env.integration-test -f docker-compose.integration-test.yml up -d",
    "test-infrastructure:stop": "docker-compose --env-file .env.integration-test -f docker-compose.integration-test.yml down",
    "test": "jest",
    "pretest:int": "pnpm test-infrastructure:start && pnpm migrations:test",
    "test:int": "jest -i --no-cache --watch --config jest-int.json",
    "test:arch": "jest -i --no-cache --watch --config jest-arch.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
