    "eslint-plugin-sonarjs": "^1.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "3.0.7",
    "prettier": "^3.0.0",
    "prisma": "^5.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
