    "fastify": "^4.27.0",
    "handlebars": "^4.7.8",
    "kafkajs": "^2.2.4",
    "nodemailer": "^6.9.13",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.0",
